<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3F41"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/instructions"
        android:layout_width="204dp"
        android:layout_height="72dp"
        android:layout_marginStart="103dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="210dp"
        android:fontFamily="@font/delius"
        android:text="INSTRUCTIONS"
        android:textAlignment="center"
        android:textSize="20sp"
        app:backgroundTint="#445945"
        app:cornerRadius="10sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="323dp"
        android:layout_height="104dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="588dp"
        android:fontFamily="@font/saithik"
        android:includeFontPadding="false"
        android:text="@string/cows_bulls"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#2D4E2E"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/start1"
        android:layout_width="204dp"
        android:layout_height="72dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/delius"
        android:text="START"
        android:textAlignment="center"
        android:textSize="30sp"
        app:backgroundTint="#445945"
        app:cornerRadius="10sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/instructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1" />
</androidx.constraintlayout.widget.ConstraintLayout>